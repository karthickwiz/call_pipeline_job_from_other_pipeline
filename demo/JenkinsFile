pipeline {
    agent any
  
  stages {
        stage('Initialize') {
            steps {
                echo 'setting...'   
                 bat 'set'
            }
        }

       stage('push') {
       
          steps {                               
            // bat 'cd C:/Karthick/Workspace/PCF/demo-5'		
			bat 'echo login..' 	 
          }
       }
     
       
       stage('PerformanceTest execution'){
		steps{
		echo "Jmeter started"
		bat 'C:/Users/karthick.k/Downloads/apache-jmeter-5.1.1/bin/jmeter.bat -n -t C:/Users/karthick.k/Desktop/jMeter/CLSD/checkDependencies/Ckeck Dependencies.jmx -l PerformanceResults.html'
		
		echo "Jmeter ended"
		}
	
	}
	
	stage('Performance Report publishing'){
		steps{
				echo "Report publishing started"
				perfReport filterRegex: '', sourceDataFiles: 'PerformanceResults.html'
				
		}
	 } 
     }     
    post { 
        always { 
           
             echo 'Build is completed Successfully!'
        }
    }
}
